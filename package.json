{
  "name": "react-vite-setup",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "env-cmd -e development vite --mode development",
    "build": "tsc && env-cmd -e development vite build",
    "preview": "vite preview",
    "lint": "eslint ./src --max-warnings=0",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "build-css-for-test": "npx tailwindcss -i ./src/index.css -o ./src/config/__test__/index.css",
    "test": "env-cmd -e test vitest --ui",
    "coverage": "vitest --coverage",
    "e2e": "npx cypress open",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "testcheck": "env-cmd -e test vitest --run --passWithNoTests",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.7",
    "@hookform/error-message": "^2.0.1",
    "@hookform/resolvers": "^2.9.10",
    "@tanstack/match-sorter-utils": "^8.7.6",
    "@tanstack/react-query": "^4.20.4",
    "@tanstack/react-table": "^8.7.9",
    "axios": "^1.2.1",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "i18n": "^0.15.1",
    "phosphor-react": "^1.4.1",
    "react": "^18.2.0",
    "react-datepicker": "^4.8.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.41.1",
    "react-router-dom": "^6.5.0",
    "react-select": "4.0.2",
    "react-syntax-highlighter": "^15.5.0",
    "react-toastify": "^9.1.1",
    "react-virtual": "^2.10.4",
    "tailwind-merge": "^1.8.1",
    "yup": "^0.32.11"
  },
  "engines": {
    "npm": "please-use-yarn"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/runtime": "^7.20.6",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@hookform/devtools": "^4.3.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-vite": "^0.3.0",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@tailwindcss/container-queries": "^0.1.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tanstack/react-query-devtools": "^4.20.4",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/cypress": "^1.1.3",
    "@types/i18n": "^0.13.6",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.15",
    "@types/react": "^18.0.26",
    "@types/react-datepicker": "^4.8.0",
    "@types/react-dom": "^18.0.9",
    "@types/react-select": "3.1.2",
    "@types/react-syntax-highlighter": "^15.5.6",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/coverage-c8": "^0.26.0",
    "@vitest/ui": "^0.25.8",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.3.0",
    "cssnano": "^5.1.14",
    "env-cmd": "^10.1.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-storybook": "^0.6.10",
    "husky": "^8.0.2",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.1.0",
    "msw": "^1.0.0",
    "node-abort-controller": "^3.1.1",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "storybook-addon-sass-postcss": "^0.1.3",
    "tailwindcss": "^3.2.4",
    "tsc-files": "^1.1.3",
    "type-fest": "^3.5.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vite-plugin-checker": "^0.5.2",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.25.8",
    "vitest-mock-extended": "^1.0.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn testcheck"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "bash -c tsc -p tsconfig.json --noEmit",
      "yarn lint"
    ]
  }
}
